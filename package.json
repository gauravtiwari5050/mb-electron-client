{
  "name": "mb-electron-client",
  "version": "0.0.1",
  "description": "Magicbell electron client",
  "author": "Gaurav Tiwari",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "mocha 'src/**/*.test.ts'",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "@magicbell/core": "^3.0.0",
    "errorhandler": "1.5.1",
    "lodash": "4.17.20",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.14.25",
    "@types/node-notifier": "^8.0.0",
    "@types/sinon": "^9.0.11",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "chai": "^4.3.4",
    "concurrently": "5.3.0",
    "electron": "^12.0.2",
    "eslint": "^7.23.0",
    "mocha": "^8.3.2",
    "nodemon": "2.0.7",
    "sinon": "^10.0.0",
    "supertest": "6.1.3",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "mocha": {
    "exit": true,
    "require": [
      "mocha.env.js",
      "ts-node/register"
    ],
    "timeout": 1000
  }
}
